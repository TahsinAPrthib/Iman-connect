<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.faithapp.controllers.ChangePasswordController"
      spacing="15" style="-fx-background-color: #1a1a1a;"
      prefWidth="400" prefHeight="300">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Change Password" 
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #00BFA5;"/>
           
    <VBox spacing="10" style="-fx-background-color: #252525; -fx-padding: 15; -fx-background-radius: 10;">
        <PasswordField fx:id="currentPasswordField" promptText="Current Password"
                      style="-fx-background-color: #303030; -fx-text-fill: white;"/>
                      
        <PasswordField fx:id="newPasswordField" promptText="New Password"
                      style="-fx-background-color: #303030; -fx-text-fill: white;"/>
                      
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm New Password"
                      style="-fx-background-color: #303030; -fx-text-fill: white;"/>
                      
        <Label fx:id="messageLabel" wrapText="true"
               style="-fx-text-fill: #ff6b6b;"/>
    </VBox>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: transparent;
                       -fx-text-fill: white;
                       -fx-border-color: #00BFA5;
                       -fx-border-width: 1;"/>
                       
        <Button text="Change Password" onAction="#handleChangePassword"
                style="-fx-background-color: #00BFA5;
                       -fx-text-fill: white;"/>
    </HBox>
</VBox> 