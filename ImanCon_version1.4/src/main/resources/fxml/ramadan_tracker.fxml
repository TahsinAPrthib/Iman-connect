<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.faithapp.controllers.RamadanTrackerController"
      style="-fx-background: linear-gradient(to bottom, #667eea 0%, #764ba2 100%);"
      spacing="0">
    
    <padding>
        <Insets top="25" right="25" bottom="25" left="25"/>
    </padding>
    
    <!-- Header with Glass Effect -->
    <VBox style="-fx-background-color: rgba(255, 255, 255, 0.1); -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 5);" spacing="15">
        <HBox alignment="CENTER_LEFT" spacing="20">
            <Button text="â† Back to Dashboard" onAction="#handleBackToDashboard"
                    style="-fx-background-color: rgba(255, 255, 255, 0.2); -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 20; -fx-padding: 10 20; -fx-border-color: rgba(255, 255, 255, 0.3); -fx-border-width: 1; -fx-border-radius: 20;"/>
            <Label text="ðŸŒ™ Ramadan Tracker" 
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 0, 1);"/>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Label fx:id="dateLabel" text="Today's Date" 
                       style="-fx-font-size: 16; -fx-text-fill: white; -fx-font-weight: 600;"/>
                <Label fx:id="ramadanDayLabel" text="Ramadan Day: 1" 
                       style="-fx-font-size: 18; -fx-text-fill: #FFD700; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 2, 0, 0, 1);"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Scrollable Main Content -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;">
            
            <!-- Fasting Tracker Card -->
            <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" spacing="20" maxWidth="800">
                <Label text="ðŸ• Fasting Tracker" 
                       style="-fx-font-size: 20; -fx-text-fill: #4A5568; -fx-font-weight: bold; -fx-text-alignment: center;"/>
                
                <HBox spacing="30" alignment="CENTER">
                    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #F7FAFC; -fx-background-radius: 15; -fx-padding: 20; -fx-min-width: 150;">
                        <Label text="ðŸŒ… Suhoor Time" style="-fx-font-size: 16; -fx-text-fill: #667eea; -fx-font-weight: bold;"/>
                        <Label fx:id="suhoorLabel" style="-fx-font-size: 24; -fx-text-fill: #2D3748; -fx-font-weight: bold;"/>
                    </VBox>
                    
                    <VBox spacing="10" alignment="CENTER" style="-fx-background-color: #F7FAFC; -fx-background-radius: 15; -fx-padding: 20; -fx-min-width: 150;">
                        <Label text="ðŸŒ† Iftar Time" style="-fx-font-size: 16; -fx-text-fill: #667eea; -fx-font-weight: bold;"/>
                        <Label fx:id="iftarLabel" style="-fx-font-size: 24; -fx-text-fill: #2D3748; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>
                
                <HBox spacing="20" alignment="CENTER">
                    <CheckBox fx:id="fastingCheck" text="âœ… Completed Today's Fast"
                              style="-fx-font-size: 16; -fx-text-fill: #4A5568; -fx-font-weight: 600;"/>
                </HBox>
                
                <VBox spacing="10">
                    <Label text="ðŸ“ Notes (if not fasting):" style="-fx-font-size: 14; -fx-text-fill: #4A5568; -fx-font-weight: 600;"/>
                    <TextArea fx:id="fastingNotes" prefRowCount="3" wrapText="true"
                              style="-fx-font-size: 14; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 10;"/>
                </VBox>
            </VBox>

            <!-- Good Deeds Tracker Card -->
            <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" spacing="20" maxWidth="800">
                <Label text="ðŸ¤² Good Deeds Tracker" 
                       style="-fx-font-size: 20; -fx-text-fill: #4A5568; -fx-font-weight: bold; -fx-text-alignment: center;"/>
                
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <TextField fx:id="deedInput" promptText="Enter a good deed..." prefWidth="400"
                               style="-fx-font-size: 14; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 12;"/>
                    <Button text="âž• Add Deed" onAction="#handleAddDeed"
                            style="-fx-background: linear-gradient(to right, #48BB78, #38A169); -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 12 20; -fx-effect: dropshadow(gaussian, rgba(72, 187, 120, 0.4), 8, 0, 0, 3);"/>
                </HBox>
                
                <ScrollPane fitToWidth="true" prefHeight="200" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                    <VBox fx:id="deedsContainer" spacing="10" style="-fx-padding: 10;"/>
                </ScrollPane>
            </VBox>

            <!-- Quran Reading Card -->
            <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" spacing="20" maxWidth="800">
                <Label text="ðŸ“– Quran Reading" 
                       style="-fx-font-size: 20; -fx-text-fill: #4A5568; -fx-font-weight: bold; -fx-text-alignment: center;"/>
                
                <HBox spacing="20" alignment="CENTER">
                    <Label text="Pages Read Today:" style="-fx-font-size: 16; -fx-text-fill: #4A5568; -fx-font-weight: 600;"/>
                    <Spinner fx:id="pagesReadSpinner" prefWidth="120" 
                             style="-fx-background-radius: 10; -fx-border-radius: 10;"/>
                    <Button text="ðŸ“ Update" onAction="#handleUpdatePages"
                            style="-fx-background: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 15; -fx-padding: 10 20; -fx-effect: dropshadow(gaussian, rgba(102, 126, 234, 0.4), 8, 0, 0, 3);"/>
                </HBox>
                
                <VBox spacing="10" alignment="CENTER">
                    <ProgressBar fx:id="quranProgress" progress="0.0" 
                                style="-fx-accent: linear-gradient(to right, #667eea, #764ba2); -fx-pref-height: 12; -fx-background-radius: 6;"
                                prefWidth="600"/>
                    <Label fx:id="quranGoalLabel" text="Daily Goal: 0/20 pages"
                           style="-fx-font-size: 16; -fx-text-fill: #4A5568; -fx-font-weight: 600;"/>
                </VBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="20" alignment="CENTER" maxWidth="800">
                <Button fx:id="saveButton" text="ðŸ’¾ Save Entry" onAction="#handleSave"
                        style="-fx-background: linear-gradient(to right, #48BB78, #38A169); -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 15 30; -fx-effect: dropshadow(gaussian, rgba(72, 187, 120, 0.4), 10, 0, 0, 5);"/>
                <Button fx:id="summaryButton" text="ðŸ“Š View Full Summary" onAction="#handleViewSummary"
                        style="-fx-background: linear-gradient(to right, #FF9800, #F57C00); -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 15 30; -fx-effect: dropshadow(gaussian, rgba(255, 152, 0, 0.4), 10, 0, 0, 5);"/>
            </HBox>

            <!-- Monthly Overview Card -->
            <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" spacing="20" maxWidth="800">
                <Label text="ðŸ“… Monthly Overview" 
                       style="-fx-font-size: 20; -fx-text-fill: #4A5568; -fx-font-weight: bold; -fx-text-alignment: center;"/>
                
                <GridPane fx:id="daysGrid" hgap="8" vgap="8" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="14.28"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="14.28"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="14.28"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="14.28"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="14.28"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="14.28"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="14.28"/>
                    </columnConstraints>
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>
    
    <stylesheets>
        <URL value="@../styles/ramadan_tracker.css"/>
    </stylesheets>
</VBox> 