            <Label text="ðŸ•Œ Zikr Tracker" 
                   style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 3, 0, 0, 1);"/>
            <Region HBox.hgrow="ALWAYS"/>
            <VBox alignment="CENTER_RIGHT" spacing="5">
                <Label fx:id="timeLabel" text="Current Time" 
                       style="-fx-font-size: 16; -fx-text-fill: white; -fx-font-weight: 600;"/>
            </VBox>
        </HBox>
    </VBox>

    <!-- Scrollable Main Content -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 20 0 0 0;">
            
            <!-- Morning Zikr Card -->
            <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" spacing="20" maxWidth="900">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="ðŸŒ… Morning Zikr (Ø£Ø°ÙƒØ§Ø± Ø§Ù„ØµØ¨Ø§Ø­)" 
                           style="-fx-font-size: 20; -fx-text-fill: #4A5568; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <CheckBox fx:id="morningCompletedCheck" text="âœ… Completed Today"
                              style="-fx-font-size: 16; -fx-text-fill: #4A5568; -fx-font-weight: 600;"/>
                </HBox>
                
                <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #F7FAFC; -fx-background-radius: 15; -fx-padding: 15;">
                    <Label text="â° Recommended Time:" style="-fx-font-size: 14; -fx-text-fill: #667eea; -fx-font-weight: bold;"/>
                    <Label text="After Fajr prayer until sunrise" style="-fx-font-size: 14; -fx-text-fill: #4A5568;"/>
                </HBox>
                
                <ScrollPane fitToWidth="true" prefHeight="300" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                    <VBox fx:id="morningZikrContainer" spacing="15" style="-fx-padding: 10;">
                        <!-- Zikr items will be added here dynamically -->
                    </VBox>
                </ScrollPane>
                
                <VBox spacing="10" alignment="CENTER">
                    <ProgressBar fx:id="morningProgress" progress="0.0" 
                                style="-fx-accent: linear-gradient(to right, #48BB78, #38A169); -fx-pref-height: 12; -fx-background-radius: 6;"
                                prefWidth="700"/>
                    <Label fx:id="morningProgressLabel" text="Progress: 0/33" 
                           style="-fx-font-size: 16; -fx-text-fill: #4A5568; -fx-font-weight: 600;"/>
                </VBox>
            </VBox>

            <!-- Evening Zikr Card -->
            <VBox style="-fx-background-color: rgba(255, 255, 255, 0.95); -fx-background-radius: 20; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 5);" spacing="20" maxWidth="900">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="ðŸŒ† Evening Zikr (Ø£Ø°ÙƒØ§Ø± Ø§Ù„Ù…Ø³Ø§Ø¡)" 
