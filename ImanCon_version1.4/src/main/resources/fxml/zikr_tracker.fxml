                                  style="-fx-font-size: 14; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 8;"/>
                        <CheckBox fx:id="morningReminderEnabled" text="Enable" selected="true"
                                  style="-fx-font-size: 14; -fx-text-fill: #4A5568; -fx-font-weight: 600;"/>
