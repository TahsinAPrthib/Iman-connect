<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.faithapp.controllers.AdminViewController"
      spacing="10" style="-fx-background-color: #1a1a1a;">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <Label text="Registered Accounts" 
           style="-fx-font-size: 24; -fx-text-fill: #00BFA5;"/>
           
    <TableView fx:id="userTable" VBox.vgrow="ALWAYS" style="-fx-background-color: #252525;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
            <TableColumn fx:id="fullNameColumn" text="Full Name" prefWidth="200"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"/>
            <TableColumn fx:id="createdAtColumn" text="Created At" prefWidth="150"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
</VBox> 